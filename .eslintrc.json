{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "max-len": ["error", { "code": 300}],
        "no-plusplus": ["off"],
        "indent": ["error", 4],
        "no-unused-expressions": 0,
        "no-console": 0,
        "vue/no-mutating-props": 0,
        "vue/valid-v-slot": 0,
        "no-alert": 0
    },
    "settings": {
        "import/resolver": {
            "node": {
              "extensions": [".js", ".vue", ".png"]
            }
        }
    }
}